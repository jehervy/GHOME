<?xml version="1.0"?>
<metrics>
    <metric id="1">
        <name>Température</name>
        <sensor>
            <formatter type="string" format="{{ value }} °C" />
        </sensor>
        <actuator>
            <validator type="boolean" />
            <formatter type="boolean" yes="Allumer le chauffage" no="Couper le chauffage" />
        </actuator>
    </metric>
    <metric id="2">
        <name>Luminosité</name>
        <sensor>
            <formatter type="string" format="{{ value }} lx" />
        </sensor>
        <actuator>
            <validator type="boolean" />
            <formatter type="boolean" yes="Allumer la lumière" no="Éteindre la lumière" />
        </actuator>
    </metric>
    <metric id="3">
        <name>Présence</name>
        <sensor>
            <formatter type="boolean" yes="Présence détectée" no="Aucune présence détectée" />
        </sensor>
    </metric>
    <metric id="4">
        <name>Ouverture</name>
        <sensor>
            <formatter type="boolean" yes="Ouvert" no="Fermé" />
        </sensor>
    </metric>
    <metric id="5">
        <name>Interrupteur</name>
        <sensor>
            <formatter type="nullOrString" format="Bouton {{ value }} actif" no="Boutons inactifs" />
        </sensor>
    </metric>
</metrics>
